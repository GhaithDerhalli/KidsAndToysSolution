        }

            

        
    </style>
</head>
<body>
    <div class="header">
        <div class="innerheader">
            <div class="logo">
                <a asp-controller="Products" asp-action="Home"><<h1><b>Kids N' Toys</b></h1></a>
                <nav>

                    <a asp-controller="Products" asp-action="ListOfAds" class="navstyle">Handla</a>
                    <a asp-controller="Products" asp-action="NewAds" class="navstyle">Sälj</a>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Products" asp-action="MyAds" class="navstyle">Mina annons</a>
                        <a asp-controller="Users" asp-action="Logout" class="navstyle">Logga ut</a>
                    }
                    else
                    {

                        <a asp-controller="Users" asp-action="LogIn" class="navstyle">Logga in</a>
                        <a asp-controller="Users" asp-action="CreateUser" class="navstyle">Skapa ett konto</a>
                    }
                    

                </nav>
            </div>
        </div>
    </div>
    <hr />

    </>
    <div>
        @RenderBody()
    </div>
    <footer>
        <div >
            <div >
