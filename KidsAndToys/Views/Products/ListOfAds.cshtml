@model ListOfAdsVM[]
@{
    ViewData["Title"] = "KidsN'Toys annonslista";

}

<head>
    <link href="~/Css/StyleSheet.css" rel="stylesheet" type="text/css">
</head>

<ul >

<h3><b>Alla annonser</b></h3>
<ul class="AdList">
    @foreach (var item in Model)
    {
            
        <li ><a aspcontroller="Products" asp-action="Details" asp-route-id = "@item.Id">@item.ProductName</a> <br/> @item.Price kr <br/> @item.Condition.Title <br/> @item.City.Title <br/> <img src="/uploads/@item.AdsPic" /></li>
        <li>
            <p><img src="/uploads/@item.AdsPic" class="ImageList" /></p>
            <li>
            <a aspcontroller="Products" asp-action="Details" asp-route-id = "@item.Id"><b style= "font-size: 20px">@item.ProductName</b></a> 
            <br/> <b>Pris </b>@item.Price kr 
            <br/> <b>Skick </b>@item.Condition.Title 
            <br/> <b>Stad </b>@item.City.Title 
            <br/>
            <hr/>
        </li>
            
        </li>
    }
</ul>
